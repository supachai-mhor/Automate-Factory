
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<FactoryAccount> SignInManager;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Automate Smart Business</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <!-- Custom styles for this template -->
    <link href="~/css/cover.css" rel="stylesheet">
    <title>Automate Smart Business</title>

    @*<link rel="canonical" href="https://getbootstrap.com/docs/4.4/examples/cover/">*@

    <!-- Bootstrap core CSS -->
    @*<link href="/docs/4.4/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">*@

    <!-- Favicons -->
    @*<link rel="apple-touch-icon" href="/docs/4.4/assets/img/favicons/apple-touch-icon.png" sizes="180x180">
        <link rel="icon" href="/docs/4.4/assets/img/favicons/favicon-32x32.png" sizes="32x32" type="image/png">
        <link rel="icon" href="/docs/4.4/assets/img/favicons/favicon-16x16.png" sizes="16x16" type="image/png">
        <link rel="manifest" href="/docs/4.4/assets/img/favicons/manifest.json">
        <link rel="mask-icon" href="/docs/4.4/assets/img/favicons/safari-pinned-tab.svg" color="#563d7c">
        <link rel="icon" href="/docs/4.4/assets/img/favicons/favicon.ico">
        <meta name="msapplication-config" content="/docs/4.4/assets/img/favicons/browserconfig.xml">
        <meta name="theme-color" content="#563d7c">*@


    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
        }

        @@media (min-width: 768px) {
            .bd-placeholder-img-lg {
                font-size: 3.5rem;
            }
        }
    </style>



</head>
<body>

    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
        <header class="masthead mb-auto">
            <div class="inner">
                <img src="~/Img/LOGO.png" class="img-thumbnail" alt="automate logo" style="width:150px;">
                <nav class="nav nav-masthead justify-content-center">
                    <a class="nav-link active" asp-controller="Home" asp-action="Index">Home</a>
                    <a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacy</a>

                    @if (SignInManager.IsSignedIn(User))
                    {
                        <a class="nav-link" asp-controller="Home" asp-action="Dashboard">
                            Dashboard
                        </a>
                        <a class="nav-link dropdown-toggle bg-info" id="navbardrop" data-toggle="dropdown">
                            @User.Identity.Name
                        </a>
                        <div class="dropdown-menu">
                                                        
                            <form method="post" asp-controller="account" asp-action="logout">
                                <button type="submit" style="width:auto"
                                        class="btn btn-link py-0">
                                    Logout
                                </button>
                            </form>

                        </div>
                                               
                    }
                    else
                    {
                        <a class="nav-link dropdown-toggle bg-info" id="navbardrop" data-toggle="dropdown">
                            Accounts
                        </a>
                        <div class="dropdown-menu">
                            <a class="text-dark" asp-controller="account" asp-action="register">
                                Register
                            </a>
                            <a class="text-dark" asp-controller="account" asp-action="login">
                                Login
                            </a>
                        </div>
                    }
                </nav>
            </div>
        </header>


        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <main role="main" class="inner cover">
            <h1 class="cover-heading">Automate Smart Business</h1>
            <p class="lead">
                Our Company provided your smart business. That we allow you builded you owner business.
                The smart business is including dashboard, organized chart, factory, production, warehouse, machine monitoring and more.
                Let's join with us. >>>

            </p>
            <p class="lead">
                <a href="#" class="btn btn-lg btn-secondary">Learn more</a>
            </p>
        </main>

        <footer class="mastfoot mt-auto">
            <div class="inner">
                &copy; 2020 - Automate Solution Design Co., Ltd.
            </div>
        </footer>

    </div>      
        
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
